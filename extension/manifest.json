{
  "manifest_version": 3,
  "name": "ContentCraft AI",
  "version": "1.0.0",
  "description": "AI-powered content creation assistant for your browser",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "clipboardWrite",
    "contextMenus",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "http://localhost:5173/*",
    "https://api.contentcraft.ai/*",
    "https://x.com/*",
    "https://api.x.com/*",
    "https://twitter.com/*",
    "https://api.twitter.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "http://localhost:5173/*",
      "https://yourapp.com/*"
    ]
  },
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://linkedin.com/*",
        "https://www.linkedin.com/*",
        "https://instagram.com/*",
        "https://www.instagram.com/*",
        "https://facebook.com/*",
        "https://www.facebook.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}